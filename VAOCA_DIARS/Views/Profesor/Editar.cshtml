
@{
    ViewBag.Title = "Editar";
}

<h2>Editar</h2>

<div class="row">
    <div class="col-lg-4 col-lg-offset-4">
        <form action="/Profesor/Actualizar?Id=@Model.Id" method="post">

            <div class="form-group">
                <label class="control-label">Correo:</label>
                <input type="text" class="form-control" name="Correo">

            </div>

            <div class="form-group">

                <label class="control-label">Clave:</label>
                <input type="password" class="form-control" name="Clave" id="password">

            </div>

            <div class="form-group">
                <label class="control-label">UsuarioId:</label>
                <input type="number" class="form-control" name="IdUsuario">

            </div>


            <button class="btn btn-primary">Guardar</button>
        </form>
    </div>
</div>
