
@{
    ViewBag.Title = "Editar";
}

<h2>Editar</h2>


<form action="/DMatricula/Editar?@Model.Id" method="post">
    <div class="form-group">
        <label class="control-label">Matricula</label>
        <input type="text" name="IdMatricula" value="@Model.IdMatricula" />
        @Html.ValidationMessage("IdMatricula")
    </div>


    <div class="form-group">
        <label class="control-label">Curso</label>
        <input type="text" name="IdCurso" value="@Model.IdCurso" />
        @Html.ValidationMessage("IdCurso")
    </div>


    <button>Guardar</button>

</form>