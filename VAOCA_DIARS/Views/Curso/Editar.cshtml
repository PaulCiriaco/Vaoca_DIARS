
@{
    ViewBag.Title = "Editar";
}

<h2>Editar</h2>


<div class="row">

    <div class="col-md-6 col-md-offset-3">
        <form action="/Curso/Actualizar?Id=@Model.Id" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label>Codigo</label>
                <input type="text" class="form-control" name="Codigo">
            </div>

            <div class="form-group">
                <label>Nombre</label>
                <input type="text" class="form-control" name="Nombre">
            </div>

            <div class="form-group">
                <label>precio</label>
                <input type="number" class="form-control" name="Precio">
            </div>

            <div class="form-group">
                <label>Horas</label>
                <input type="text" class="form-control" name="Horas">
            </div>


            <div class="form-group">
                <label>IdProfesor</label>
                <select name="IdProfesor">
                    @foreach (var item in ViewBag.profe)
                    {
                        <option value="@item.Id">@item.Correo</option>
                    }

                </select>
            </div>

            <button class="btn btn-primary">Guardar</button>

        </form>
    </div>

</div>

